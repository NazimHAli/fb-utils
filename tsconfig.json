{
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "outDir": "./lib/",
    "paths": {
      "@main-src/*": ["./packages/main/src/*"]
    },
    "skipLibCheck": true,
    "strict": true,
    "target": "es6"
  },
  "include": ["./packages/**/**src/**/*.ts", "./packages/**/**test/**/*.ts"]
}
