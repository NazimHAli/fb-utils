{
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "outDir": "../../dist/main",
    "paths": {
      "@main-src/*": ["./src/*"]
    },
    "skipLibCheck": true,
    "strict": true,
    "target": "es6"
  },
  "include": ["./src/**/*.ts", "./test/**/*.ts"]
}
