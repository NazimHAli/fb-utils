{
  "name": "fb-utils",
  "version": "0.0.0-development",
  "description": "Firebase utility functions to help working with firebase easier.",
  "main": "./lib/src/index.js",
  "files": [
    "lib/**/*"
  ],
  "scripts": {
    "build": "yarn clean && tsc",
    "clean": "rm -rf ./lib/",
    "cm": "cz",
    "lint": "yarn lint:pre && yarn lint:ts",
    "lint:fix": "yarn lint:pre -w",
    "lint:pre": "prettier --check ./src",
    "lint:ts": "tsc --noEmit",
    "prepare": "husky install",
    "semantic-release": "semantic-release",
    "test": "yarn lint && yarn test:coverage",
    "test:coverage": "jest --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/NazimHAli/fb-utils.git"
  },
  "license": "MIT",
  "author": {
    "name": "Nazim Ali",
    "url": "https://github.com/NazimHAli"
  },
  "engines": {
    "node": ">=12.0"
  },
  "keywords": [
    "firebase",
    "firestore",
    "cloud-functions",
    "data bundles",
    "typescript"
  ],
  "bugs": {
    "url": "https://github.com/NazimHAli/fb-utils/issues"
  },
  "homepage": "https://github.com/NazimHAli/fb-utils#readme",
  "dependencies": {},
  "devDependencies": {
    "@types/jest": "^27.0.3",
    "@types/node": "^12.20.11",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "commitizen": "^4.2.4",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.25.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.4.0",
    "husky": "^6.0.0",
    "jest": "^27.2.0",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "semantic-release": "^17.4.7",
    "ts-jest": "^27.0.5",
    "ts-node": "^10.2.1",
    "tsconfig-paths": "^3.12.0",
    "typescript": "^4.2.4"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*": "yarn lint:fix"
  },
  "release": {
    "branches": [
      "main"
    ]
  }
}
